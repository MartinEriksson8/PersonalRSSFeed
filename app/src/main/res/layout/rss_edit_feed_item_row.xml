<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">


    <TextView
        android:id="@+id/rssEditFeedTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/rssFeedItemImageView"
        android:layout_toRightOf="@+id/rssFeedItemImageView"
        android:ems="10"
        android:text="Title RSS Feed"
        />

    <TextView
        android:id="@+id/rssEditFeedDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_alignEnd="@+id/rssEditFeedTitleTextView"
        android:layout_marginRight="0dp"
        android:layout_alignRight="@+id/rssEditFeedTitleTextView"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:ems="10"
        android:text="www.rss.feed.com"
         />

</RelativeLayout>
